	<modelVersion>4.0.0</modelVersion>
	<name>gcLauncher</name>
	<artifactId>launcher</artifactId>
	<groupId>com.growcontrol</groupId>
	<version>4.0.0</version>
	<packaging>jar</packaging>
	<url>https://growcontrol.com</url>
